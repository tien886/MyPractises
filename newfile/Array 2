#include<bits/stdc++.h>
#define Mang 100
using namespace std;
void nhapmang(int a[],int &n, int &A){
	cout<<"Mang cua ban co bao nhieu so: ";cin>>n;
	for(int i=0;i<n;i++) 
	{	cout<<"pt "<<i<<": ";cin>>a[i]; }
	}
void timcapso(int a[],int &n, int &A){
	cout<<"Nhap tong ban muon tim ";cin>>A;
	for(int i=0;i<n;i++){
		for(int j=i+1;j<n;j++){
			if(a[i]+a[j]==A) cout<<"( "<<a[i]<<", "<<a[j]<<" )"<<endl;
			}
			}
			}			
int main(){
	int array[Mang];int n,A;
	nhapmang(array,n,A);
	timcapso(array,n,A);
	}
